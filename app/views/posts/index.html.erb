
<div>
  <div>
    <h2>
      Add a new post
    </h2>

    <form action="/insert_post" method="post" enctype="multipart/form-data">
         <div>
        <label for="form-group">Image</label>
        <input type="file" id="form-group" name="query_photo" placeholder="Enter a URL for the image...">
      </div>
      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>


        <input type="hidden" id="user_id_box" name="query_user_id" value="@current_user">


      <button>
        Create post
      </button>
    </form>
  </div>
</div>
